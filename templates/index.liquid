{% assign pages = site.pages['/'].children_in_list %}

<main class="grow">
    <!-- Hero -->
    <section class="relative overflow-hidden">
        <!-- Bg -->
        <div class="absolute inset-0 pointer-events-none bg-gradient-to-t from-slate-800 bg-opacity-60 -z-10" aria-hidden="true"></div>

        <!-- Illustration -->
        <div class="absolute -translate-x-1/2 pointer-events-none left-1/2 -z-10" aria-hidden="true">
            {% assign bg_illustration_url = 'images/hero-illustration.png' |  asset_url %}
            <img
            src="{{ site.settings.bg_illustration_url | default: bg_illustration_url }}"
            class="max-w-none"
            width="1905"
            height="622"
            alt="Hero Illustration"
            />
        </div>

        <div class="px-4 mx-auto max-w-7xl sm:px-6">
            <div class="pb-8 pt-28 md:pt-36 md:pb-16">

                <!-- Hero content -->
                <div class="relative flex flex-col max-w-xl mx-auto text-center md:max-w-none md:text-left md:flex-row">

                    <!-- Content -->
                    <div class="md:w-[48rem]">

                        <!-- Copy -->
                        <div class="md:pr-32">
                            <h1 class="pb-6 text-transparent h2 font-aspekta bg-clip-text bg-gradient-to-tr from-indigo-500 via-sky-300 to-slate-200"> {{ site.settings.slogan }} </h1>
                            <p class="mb-8 text-lg text-slate-400">{{ site.settings.description }}</p>
                        </div>
                        <!-- Logos -->
                        <div class="flex-wrap items-center text-center md:flex md:space-x-5">
                            <!-- Label -->
                            <div class="mb-4 md:mb-0">
                                <div class="text-sm italic text-slate-500 whitespace-nowrap">Catch up with founders from</div>
                            </div>
                            <div class="inline-flex flex-wrap items-center">
                                <div class="px-3 py-2">
                                    <img src="{{ 'images/client-01.svg' |  asset_url }}" width="85" height="40" alt="Client 01">
                                </div>
                                <div class="px-3 py-2">
                                    <img src="{{ 'images/client-02.svg' |  asset_url }}" width="72" height="16" alt="Client 02">
                                </div>
                                <div class="px-3 py-2">
                                    <img src="{{ 'images/client-03.svg' |  asset_url }}" width="67" height="32" alt="Client 03">
                                </div>
                            </div>
                        </div>

                        <!-- Image -->
                        <div class="max-w-sm mx-auto md:max-w-none md:absolute md:left-[42rem] lg:left-[48rem] mt-12 md:mt-0 md:top-1/2 md:-translate-y-1/2">
                            <img src="{{ 'images/hero-image.png' |  asset_url }}" class="mx-auto md:max-w-none" width="332" height="298" alt="Hero Illustration" />
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </section>

    <!-- Page content -->
    <section>
        <div class="px-4 mx-auto max-w-7xl sm:px-6">
            <div class="md:flex md:justify-between md:divide-x md:divide-slate-800">
                <!-- Main content -->
                <div class="pt-6 pb-12 md:grow md:pb-20">
                    <div class="md:pr-6 lg:pr-10">
                        <!-- List -->
                        <div>
                            <!-- Content header -->
                            <div class="pb-6 mb-10 border-b border-slate-800">
                                <div class="items-center justify-between text-center md:text-left md:flex">
                                    <!-- Right: Button -->
                                    <div class="mb-4 md:mb-0 md:order-1 md:ml-6">
                                        <a href="/-/pages/new" class="btn-sm py-1.5 text-white bg-indigo-500 hover:bg-indigo-600">ÊèêÈóÆ</a>
                                    </div>
                                    <!-- Left: Links -->
                                    {% assign order_by = params._order_by %}
                                    {% unless order_by %}
                                        {% assign order_by = '-views_count' %}
                                    {% endunless %}
                                    <ul class="inline-flex flex-wrap -mx-3 -my-1 text-sm font-medium grow" >
                                        <li class="px-3 py-1">
                                            <a class="relative transition duration-150 ease-in-out" :class="'{{ order_by }}' === '-views_count' ? ' text-indigo-500' : 'text-slate-500 hover:text-slate-20'" href="?_order_by=-views_count">
                                                <span x-show="'{{ order_by }}' === '-views_count'" x-cloak>
                                                    {% render 'active_icon' %}
                                                </span>
                                                <span>ÊúÄÁÉ≠ÈóÆÈ¢ò</span>
                                            </a>
                                        </li>
                                        <li class="px-3 py-1">
                                            <a class="relative transition duration-150 ease-in-out" :class="'{{ order_by }}' === '-created_at' ? ' text-indigo-500' : 'text-slate-500 hover:text-slate-20'" href="?_order_by=-created_at">
                                                <span x-show="'{{ order_by }}' === '-created_at'" x-cloak>
                                                    {% render 'active_icon' %}
                                                </span>
                                                <span>ÊúÄÊñ∞ÈóÆÈ¢ò</span>
                                            </a>
                                        </li>
                                        <li class="px-3 py-1" >
                                            <a class="relative transition duration-150 ease-in-out" :class="'{{ order_by }}' === 'related' ? ' text-indigo-500' : 'text-slate-500 hover:text-slate-20'" href="?_order_by=related">
                                                <span x-show="'{{ order_by }}' === 'related'" x-cloak>
                                                    {% render 'active_icon' %}
                                                </span>
                                                <span>‰∏éÊàëÁõ∏ÂÖ≥</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- Posts -->


                            <div class="mb-12">
                                <!-- List container -->
                                <turbo-frame id="popular_posts_list" class="flex flex-col mb-8 space-y-3">
                                    {% assign popular_posts = site.pages['/'].children_in_list | order_by: order_by %}
                                    {% paginate_tag popular_posts, per: 10 %}
                                        {% for popular_post in popular_posts %}
                                            {% render 'post', post: popular_post %}
                                        {% endfor %}
                                        {% render 'paginate', paginate: paginate %}
                                    {% endpaginate_tag %}

                                    <!-- Sponsored item -->
                                    <div class="px-5 py-3 -order-1">
                                        <div class="flex items-center space-x-4">
                                            <img
                                            class="rounded-full shrink-0 w-14 h-14"
                                            src="{{ 'images/sponsor.png' | asset_url }}"
                                            width="56"
                                            height="56"
                                            alt="Sponsor"
                                            />
                                            <div>
                                                <div class="mb-1">
                                                    <a
                                                    class="font-semibold transition duration-150 ease-in-out text-slate-200 hover:text-white"
                                                    href="#0"
                                                    >Bulky - The Most Accurate Online Bulk Email
                                                    Verification Service üöÄ</a
                                                    >
                                                </div>
                                                <div class="text-xs italic text-slate-500">
                                                    Promoted
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </turbo-frame>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Sidebar -->
                <aside class="pt-6 pb-12 md:w-64 lg:w-80 md:shrink-0 md:pb-20">
                    <div class="md:pl-6 lg:pl-10">

                        <!-- Sidebar content -->
                        <div class="space-y-6">

                            <!-- Search form -->
                            <form>
                                <div class="flex flex-wrap">
                                    <div class="w-full">
                                        <label class="block text-sm sr-only" for="search">Search</label>
                                        <div class="relative flex items-center">
                                            <input id="search" type="search" class="w-full py-1 pl-10 rounded-full form-input" />
                                            <div class="absolute inset-0 right-auto flex items-center justify-center">
                                                <svg class="w-4 h-4 mx-3 shrink-0" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
                                                    <path class="fill-slate-600" d="M7 14c-3.86 0-7-3.14-7-7s3.14-7 7-7 7 3.14 7 7-3.14 7-7 7zM7 2C4.243 2 2 4.243 2 7s2.243 5 5 5 5-2.243 5-5-2.243-5-5-5zm8.707 12.293a.999.999 0 11-1.414 1.414L11.9 13.314a8.019 8.019 0 001.414-1.414l2.393 2.393z" />
                                                </svg>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <!-- New Discussions -->
                            <div>
                                <div class="mb-4 text-xs font-semibold uppercase text-slate-600"> ÊúÄÊñ∞ÈóÆÈ¢ò </div>
                                <ul class="space-y-3">
                                    {% assign newest_pages = pages | order_by: '-created_at' | limit: 3  %}
                                    {% for page in newest_pages %}
                                        <li>
                                            <div class="flex items-center mb-1">
                                                <img class="mr-2 rounded-full" src="{{ page.author.avatar_url | default: default_avatar_url }}" width="16" height="16" alt="User 06" />
                                                <div class="text-xs">
                                                    <a class="font-medium text-indigo-500 transition duration-150 ease-in-out hover:text-indigo-400" href="#0">{{ page.author.name }}</a>
                                                </div>
                                            </div>
                                            <h3 class="mb-1 text-sm">
                                                <a class="font-semibold transition duration-150 ease-in-out text-slate-200 hover:text-white" href="{{ page.path  }}"> {{ page.link_text }}</a>
                                            </h3>
                                            <div class="text-xs text-slate-600">
                                                <span class="text-slate-500">{{ page.published_at | date: "%Y-%m-%d" }}</span> ¬∑ <span class="text-slate-500">14 Comments</span>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <!-- Latest Startups -->
                            <div>
                                <div class="mb-4 text-xs font-semibold uppercase text-slate-600">Latest Startups</div>
                                <ul class="space-y-3">
                                    <li>
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center min-w-0 mr-2 grow">
                                                <img class="mr-3 shrink-0" src="{{ 'images/startup-01.svg' | asset_url }}" width="32" height="32" alt="Startup 01" />
                                                <h3 class="text-sm truncate">
                                                    <a class="font-semibold transition duration-150 ease-in-out text-slate-200 hover:text-white" href="#0">Visual Studio X</a>
                                                </h3>
                                            </div>
                                            <button class="text-xs text-indigo-500 inline-flex font-medium rounded-full text-center px-2 py-0.5 border border-slate-700 bg-gradient-to-tr from-slate-800/20 via-slate-800/50 to-slate-800/20 hover:bg-slate-800 transition duration-150 ease-in-out">Follow</button>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center min-w-0 mr-2 grow">
                                                <img class="mr-3 shrink-0" src="{{ 'images/startup-02.svg' | asset_url }}" width="32" height="32" alt="Startup 02" />
                                                <h3 class="text-sm truncate">
                                                    <a class="font-semibold transition duration-150 ease-in-out text-slate-200 hover:text-white" href="#0">Gymp DevTools</a>
                                                </h3>
                                            </div>
                                            <button class="text-xs text-indigo-500 inline-flex font-medium rounded-full text-center px-2 py-0.5 border border-slate-700 bg-gradient-to-tr from-slate-800/20 via-slate-800/50 to-slate-800/20 hover:bg-slate-800 transition duration-150 ease-in-out">Follow</button>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center min-w-0 mr-2 grow">
                                                <img class="mr-3 shrink-0" src="{{ 'images/startup-03.svg' | asset_url }}" width="32" height="32" alt="Startup 03" />
                                                <h3 class="text-sm truncate">
                                                    <a class="font-semibold transition duration-150 ease-in-out text-slate-200 hover:text-white" href="#0">Paytable Inc</a>
                                                </h3>
                                            </div>
                                            <button class="text-xs text-indigo-500 inline-flex font-medium rounded-full text-center px-2 py-0.5 border border-slate-700 bg-gradient-to-tr from-slate-800/20 via-slate-800/50 to-slate-800/20 hover:bg-slate-800 transition duration-150 ease-in-out">Follow</button>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <!-- Popular Posts -->
                            <div>
                                <div class="mb-4 text-xs font-semibold uppercase text-slate-600">ÊúÄÁÉ≠ÈóÆÈ¢ò</div>
                                <ul class="space-y-3">
                                    {% assign popular_pages = pages | order_by: '-visits_count' | limit: 3  %}
                                    {% for page in popular_pages %}
                                        <li>
                                            <div class="flex items-center mb-1">
                                                <img class="mr-2 rounded-full" src="{{ page.author.avatar_url | default: default_avatar_url }}" width="16" height="16" alt="User 06" />
                                                <div class="text-xs">
                                                    <a class="font-medium text-indigo-500 transition duration-150 ease-in-out hover:text-indigo-400" href="#0">{{ page.author.name }}</a>
                                                </div>
                                            </div>
                                            <h3 class="mb-1 text-sm">
                                                <a class="font-semibold transition duration-150 ease-in-out text-slate-200 hover:text-white" href="{{ page.path  }}"> {{ page.link_text }}</a>
                                            </h3>
                                            <div class="text-xs text-slate-600">
                                                <span class="text-slate-500">{{ page.published_at | date: "%Y-%m-%d" }}</span> ¬∑ <span class="text-slate-500">14 Comments</span>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <!-- Newsletter -->
                            <div class="-rotate-1">
                                <div class="relative p-5 bg-gradient-to-tr from-slate-800/20 via-slate-800/50 to-slate-800/20">
                                    <div class="absolute inset-0 -m-px pointer-events-none -z-10 before:absolute before:inset-0 before:bg-gradient-to-t before:from-slate-700 before:to-slate-800 after:absolute after:inset-0 after:bg-slate-900 after:m-px" aria-hidden="true"></div>
                                    <div class="mb-3 font-semibold text-center text-transparent bg-clip-text bg-gradient-to-tr from-indigo-500 via-sky-300 to-slate-200">Get the best of Community, directly in your inbox.</div>
                                    <!-- Form -->
                                    <div class="w-full">
                                        <label class="block text-sm sr-only" for="newsletter">Email</label>
                                        <form class="relative flex items-center max-w-xs mx-auto">
                                            <input id="newsletter" type="email" class="form-input py-1.5 w-full pr-10 rounded-full" placeholder="Your email">
                                            <button type="submit" class="absolute inset-0 left-auto" aria-label="Subscribe">
                                                <svg class="w-3 h-3 mx-3 text-indigo-500 fill-current shrink-0" viewBox="0 0 12 12" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M11.707 5.293L7 .586 5.586 2l3 3H0v2h8.586l-3 3L7 11.414l4.707-4.707a1 1 0 000-1.414z" fill-rule="nonzero"></path>
                                                </svg>
                                            </button>
                                        </form>
                                        <!-- Success message -->
                                        <!-- <p class="mt-2 text-xs text-center text-slate-200">Thanks for subscribing!</p> -->
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </aside>

            </div>

        </div>
    </section>
</main>
{% schema %}
    {
    "name": "Index",
    "sub_page_templates": ["post"]
    }
{% endschema %}
