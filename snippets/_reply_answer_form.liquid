<div
  x-show="open"
  x-cloak
  x-data="{content:'', name: ''}"
  class="w-full pl-2 pr-2 mt-2 md:pl-4 md:pr-4 md:mt-3"
  id="create_reply_{{ parent_page.id }}_id">
  <div class="flex space-x-3">
    <div class="w-full">
      {%# 评论框 %}
      {% form_tag 'page' %}
        <input value="reply_level_2" autocomplete="off" type="hidden" name="page[template_name]">
        <input value="" autocomplete="off" type="hidden" name="page[template_style]">
        <input value="{{ parent_page.path }}" autocomplete="off" type="hidden" name="page[parent_full_path]">
        <input value="create_answer_reply_success" autocomplete="off" type="hidden" name="return_template_name">
        <input
        x-model="name"
        name="page[name]"
        type="hidden"
        />
        <textarea name="page[template_variables]content" rows="4" class="w-full form-textarea placeholder:italic" placeholder="回复{{ reply.author.name }}..." x-model.debounce="content"></textarea>
        <div id="reply_{{ reply.id }}_error" class="text-xs text-red-500"></div>
        <div class="flex items-center space-x-3">
          <input
            type="submit"
            value="提交"
            @click="open = false;name=content.substring(0, 50)"
            class="inline-flex items-center justify-center px-4 py-1 mt-2 text-xs font-medium leading-5 transition duration-150 ease-in-out rounded-full bg-primary whitespace-nowrap" />
          <div class="inline-flex items-center justify-center px-4 py-1 mt-2 text-xs font-medium leading-5 transition duration-150 ease-in-out rounded-full dark:bg-slate-800 bg-slate-100 whitespace-nowrap" x-on:click="open = false; content=''">
            取消
          </div>
        </div>
      {% endform_tag %}
    </div>
  </div>
</div>
