<div class="[&:nth-child(-n+4)]:-order-1 bg-gradient-to-tr from-slate-800/20 via-slate-800/50 to-slate-800/20">
<div class="relative p-5">
    <div class="absolute inset-0 -m-px pointer-events-none -z-10 before:absolute before:inset-0 before:bg-gradient-to-t before:from-slate-700 before:to-slate-800 after:absolute after:inset-0 after:bg-slate-900 after:m-px" aria-hidden="true"></div>
    <div class="items-center space-y-3 sm:flex sm:space-y-0 sm:space-x-5">
        <div class="shrink-0">
            <button class="flex items-center text-left w-16 px-2.5 py-1 rounded border border-slate-700 bg-gradient-to-tr from-slate-800/20 via-slate-800/50 to-slate-800/20 hover:bg-slate-800 transition duration-150 ease-in-out">
                <svg class="shrink-0 fill-indigo-400 mr-1.5" width="11" height="7" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1.664 6.747.336 5.253 5.5.662l5.164 4.591-1.328 1.494L5.5 3.338z" />
                </svg>
                <span class="text-xs font-medium text-center text-indigo-500 grow">244</span>
            </button>
        </div>
        <div class="items-center justify-between space-y-5 grow lg:flex lg:space-x-6 lg:space-y-0">
            <div>
                <div class="mb-2">
                    <h2>
                        <a class="font-semibold transition duration-150 ease-in-out text-slate-200 hover:text-white" href="{{ post.path  }}" data-turbo="false"> {{ post.link_text }} </a>
                    </h2>
                </div>
                <div class="flex items-center">
                    <img class="mr-2 rounded-full" src="{{ post.author.avatar_url | default: default_avatar_url }}" width="16" height="16" alt="User 01" />
                    <div class="text-xs text-slate-600">
                        <a class="font-medium text-indigo-500 transition duration-150 ease-in-out hover:text-indigo-400" href="#0">{{ post.author.name }}</a> · <span class="text-slate-500">{{ post.published_at | date: "%Y-%m-%d" }}</span> · <span class="text-slate-500">13 Comments</span>
                    </div>
                </div>
            </div>
            <div class="shrink-0 flex -space-x-3 -ml-0.5">
                <img class="box-content border-2 rounded-full border-slate-900" src="{{ 'images/avatar-02.jpg' |  asset_url }}" width="24" height="24" alt="User 02" />
                <img class="box-content border-2 rounded-full border-slate-900" src="{{ 'images/avatar-13.jpg' |  asset_url }}" width="24" height="24" alt="User 13" />
            </div>
        </div>
    </div>
</div>
</div>
